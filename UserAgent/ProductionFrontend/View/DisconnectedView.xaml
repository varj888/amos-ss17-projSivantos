<UserControl x:Class="Frontend.View.DisconnectedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Frontend.View"
             mc:Ignorable="d" 
             >
    <Grid Name="DisconnectedGrid" >
        <Label Content="NO CONNECTION" Margin="0,70,0,0" HorizontalAlignment="Center"  VerticalAlignment="Center" Foreground="#FF323C46" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold"/>
        <Label Content="Please connect a Raspberry Pi to access its controls." Margin="0,110,0,0" HorizontalAlignment="Center"  VerticalAlignment="Center" Foreground="#FF323C46" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Regular"/>
        <Image HorizontalAlignment="Center" Height="100"  VerticalAlignment="Center" Width="100" Source="..\img\disconnected.png" Margin="0,0,0,50"/>
    </Grid>
</UserControl>
